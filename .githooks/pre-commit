#!/bin/sh
# Simple Gifting - Pre-commit hook

echo "ğŸ” Running pre-commit checks for Simple Gifting..."

# Run linting
echo "ğŸ“ Checking code style..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed. Please fix the issues before committing."
  exit 1
fi

# Run type checking
echo "ğŸ” Checking TypeScript types..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ Type checking failed. Please fix the type errors before committing."
  exit 1
fi

# Run build to make sure everything compiles
echo "ğŸ—ï¸  Building project..."
